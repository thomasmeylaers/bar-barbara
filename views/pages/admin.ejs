<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <title>Bar Barbara | ADMIN</title>
</head>

<body>
    <div class="container">
        <button id="register">REGISTER</button>
        <button id="test">TEST</button>
        <a href="/logout">LOGOUT</a>
        <button id="deleteAll">DELETE ALL</button>
        <div class="row">
            <ul id="orders-list">
            </ul>
        </div>
        <div class="row">
            <div class="col-md-6">
                <h1>Add Day</h1>
                <p>day: <input type="text" id="day"></p>
                <p>month: <input type="text" id="month"></p>
                <button id="add-day">ADD DAY</button>
            </div>
            <div class="col-md-6">
                <h1>Remove Day</h1>
                <p>day: <input type="text" id="remove-day"></p>
                <p>month: <input type="text" id="remove-month"></p>
                <button id="remove-date">REMOVE DAY</button>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <h1>Add Ingredient</h1>
                <p>name: <input type="text" id="name-ingredient"></p>
                <p>amount (in l): <input type="text" id="amount-ingredient"></p>
                <p>price (per amount): <input type="text" id="price-ingredient"></p>
                <button id="add-ingredient">ADD INGREDIENT</button>
            </div>
            <div class="col-md-6">
                <h1>Remove Ingredient</h1>
                <p>name (not necessary) <input type="text" id="remove-name"></p>
                <button id="remove-ingredient">REMOVE INGREDIENT</button>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <h1>Add Recipe</h1>
                <p>Name: <input type="text" id="name-recipe"></p>
                <p>ingredient: <input type="text" id="ingredient-recipe"></p>
                <p> amount:
                    <select name="amount-option" id="amount-option">
                        <option value="0.025">0.025</option>
                        <option value="0.033">0.033</option>
                    </select> times?: <input type="text" id="times-amount">
                    <button id="save-ingredient">add ingredient</button>
                </p>
                <button id="done-recipe">DONE</button>
            </div>
            <div class="col-md-6">
                <h1>Remove Recipe</h1>
                <p>name: <input type="text" id="name-remove-recipe"></p>
                <button id="remove-recipe">REMOVE RECIPE</button>
            </div>
        </div>


        <div class="row">
            <div class="col-md-12">
                <h1>ACCOUNTS </h1>
                <table class="table table-striped table-bordered mydatatable" style="width: 100%">
                    <thead>
                        <tr>
                            <th>Klant</th>
                            <th>Schulden</th>
                            <th>Betalen</th>
                        </tr>
                    </thead>
                    <tbody id="tbody">
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="admin.js"></script>
</body>

</html>